<div class="mt-4">
    <h3>Cập Nhật Khóa Học</h3>
    <form method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control"value="{{course.name}}" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea  class="form-control" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">videoId</label>
            <input type="text" class="form-control"value="{{course.videoId}}" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">trình độ</label>
            <input type="text" class="form-control"value="{{course.level}}" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu Lại</button>
    </form>
</div>